<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8dffffff"
    >

    <RelativeLayout
        android:id="@+id/dialog_menu_viewgroup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/dialog_menu_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:text="Menu"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dialog_menu_viewgroup_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_menu_viewgroup_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/txt_time_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:text="Time Zone"
            />
        <TextView
            android:id="@+id/txt_channel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_time_zone"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:text="Channel Info"
            />
        <TextView
            android:id="@+id/txt_MTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@id/txt_channel_info"
            android:textColor="@android:color/black"
            android:text="MTS"
            />
        <TextView
            android:id="@+id/txt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@id/txt_MTS"
            android:textColor="@android:color/black"
            android:text="Subtitle"
            />
        <TextView
            android:id="@+id/txt_summer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@id/txt_subtitle"
            android:textColor="@android:color/black"
            android:text="Summer Time"
            />
        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@id/txt_summer_time"
            android:textColor="@android:color/black"
            android:text="Version"
            />
        <TextView
            android:id="@+id/txt_reset_defualt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@id/txt_version"
            android:textColor="@android:color/black"
            android:text="Reset Defualt"
            />

    </RelativeLayout>


</RelativeLayout>
